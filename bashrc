lcd() { cd "$@" && ls && echo "-----------------" &&  pwd; }
alias dc='cd && clear'
alias :Q='exit'
alias :q='exit'
alias sl='ls -la' 
alias free='free -h'
alias cd..='cd ..'
alias grep='grep --color=always'
alias uptime='uptime -p'  
alias df='df -h'
alias cpo='cp -vri'
export PATH=/home/erick/LinuxScripts:$PATH
